@model MovieVM
@{
    Layout = "_AdminLayout";
}

<div class="container mt-5">
	<div class="card shadow-lg p-4 rounded-4">
		<h3 class="mb-4 text-center fw-bold text-primary">🎬 Edit This Movie</h3>

		<form asp-action="Edit" method="post" enctype="multipart/form-data">
			<div class="row g-3">
				<!-- Movie ID -->
				<div >
					<input asp-for="Movie.Id" hidden/>
					<input asp-for="Movie.CreatedBy" hidden/>
					<input asp-for="Movie.LastModifiedBy" hidden/>
					<input asp-for="Movie.CreatedOn" hidden/>
					<input asp-for="Movie.LastModifiedOn" hidden/>
				</div>

				<!-- Movie Name -->
				<div class="col-md-6">
					<label asp-for="Movie.Name" class="form-label fw-semibold">Movie Name</label>
					<input asp-for="Movie.Name" class="form-control" placeholder="Enter movie name" required />
					<span asp-validation-for="Movie.Name" class="text-danger"></span>
				</div>

				<!-- Description -->
				<div class="col-md-6">
					<label asp-for="Movie.Descrption" class="form-label fw-semibold">Description</label>
					<textarea asp-for="Movie.Descrption" class="form-control" placeholder="Short movie description"></textarea>
				</div>

				<!-- Price -->
				<div class="col-md-4">
					<label asp-for="Movie.Price" class="form-label fw-semibold">Ticket Price</label>
					<input asp-for="Movie.Price" class="form-control" placeholder="e.g. 12.5" required />
				</div>

				<!-- Status -->
				<div class="col-md-4">
					<label asp-for="Movie.Status" class="form-label fw-semibold"></label>
					<select asp-for="Movie.Status" class="form-select">
						<option value="true">Active</option>
						<option value="false">Inactive</option>
					</select>
				</div>

				<!-- Date -->
				<div class="col-md-4">
					<label asp-for="Movie.Date" class="form-label fw-semibold"></label>
					<input asp-for="Movie.Date" type="date" class="form-control" required />
				</div>

				<!-- Time -->
				<div class="col-md-4">
					<label asp-for="Movie.Time" class="form-label fw-semibold"></label>
					<input asp-for="Movie.Time" type="time" class="form-control" required />
				</div>

				<!-- Main Image -->
				<div class="col-md-4">
					<label class="form-label fw-semibold" asp-for="Movie.MainImg">profile Image</label>
					<input asp-for="Movie.MainImg" type="file" name="mainImage" class="form-control" />
					<img src="~/Images/movies/@Model?.Movie?.MainImg" alt="Movie Image" style="width:100px; height:100px; object-fit:cover;" />
				</div>

				<!-- Category -->
				<div class="col-md-4">
					<label asp-for="Movie.CategoryId" class="form-label fw-semibold">Category</label>
					<select asp-for="Movie.CategoryId" class="form-select" asp-items="Model?.Categories" required>
						<option value="">-- Select Category --</option>
					</select>
				</div>

				<!-- Cinema -->
				<div class="col-md-4">
					<label asp-for="Movie.CinemaId" class="form-label fw-semibold">Cinema</label>
					<select asp-for="Movie.CinemaId" class="form-select" asp-items="Model.Cinemas" required>
						<option value="">-- Select Cinema --</option>
					</select>
				</div>

				<!-- Sub Images In MovieImages Table -->
				<div class="col-12">
					<label class="form-label fw-semibold">Sub Images</label>
					<input type="file" name="file" multiple class="form-control" />
				</div>
			</div>

			<!-- Submit Button -->
			<div class="mt-4 text-center">
				<button type="submit" class="btn btn-primary px-5 py-2 rounded-3">Create Movie</button>
				<a asp-action="Index" class="btn btn-secondary ms-3 px-4 py-2 rounded-3">Cancel</a>
			</div>
		</form>
	</div>
</div>

